{{!-- Welcome --}}
<div class="row">
  <div class="col-auto">
    <h2><span>~</span>Welcome, {{user.name}} !<span>~</span></h2>
  </div>
</div>

{{!-- Create a Post --}}
<main class="container">
  <div class="my-3 p-3 bg-body bg-light rounded shadow-sm">
    <h2 class="purple-color border-bottom pb-2 mb-0">Create a Post</h2>


    {{!-- Form --}}
    <form class="form-new-blog-form">
      <div class="form-group">
        <textarea name="content" id="post-content" class="post-content mytextarea"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>

{{!-- Current Posts --}}
 {{#if posts.length}}
  <div class="col-md-6 blog-list">
    <h3>Current Posts:</h3>

    {{#each post as |posts|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

{{!-- Comments --}}
  <p>Comments:</p>
      {{#if post.comments}}
        {{#each post.comments as |comment|}}
          <div class="d-flex text-muted pt-3">
            <p class="pb-3 mb-0 small lh-sm border-bottom" style="margin-left: 75px">
              {{comment.user.name}}:
              {{comment.content}}
            </p>
          </div>
        {{/each}}
      {{/if}}

      <a href="#" id="btn-comment" class="btn btn-comment" id={{post.id}}>Comment</a>



  </div>

  <script src="/homework/14challenge-assignment/public/js/dashboard.js"></script>
  <script src="/homework/14challenge-assignment/public/js/comment.js"></script>
  <script src="/homework/14challenge-assignment/public/js/post.js"></script>

</main>

