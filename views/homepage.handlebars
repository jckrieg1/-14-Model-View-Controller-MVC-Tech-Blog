{{#each posts as |post|}}

 <!-- Page content-->
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-8">
                <!-- Post header-->
                <header class="mb-4">
                    <!-- Post title-->
                    <h1 class="fw-bolder mb-1">Welcome to Blog Post!</h1>
                </header>
                <!-- Post content; User-->
                <div class="col-4">
                    <p class="blogCreate text-right">Created by {{blog.user.first_name}} on {{format_date blog.date_created}}</p>
                </div>
			</div>
                {{!-- Body --}}
                <div class="blogDesc">
                    <p class="text-center blogDescMain">{{blog.description}}</p>
                </div>
        </div>
  </div>
                   
{{/each}}
               
       