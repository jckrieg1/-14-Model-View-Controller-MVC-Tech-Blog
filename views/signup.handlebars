<div class="login-form justify-content-center d-flex">
  <form class="col-6" id="signup-form">
    <h1 class="h3 mb-3 fw-normal">Create an account </h1>

    <div class="form-floating">
      <input type="text" class="form-control" id="first_name" placeholder="John"/>
      {{ first_name }}
      <label for="floatingInput">First name</label>
    </div>

    <div class="form-floating">
      <input type="text" class="form-control" id="last_name" placeholder="Doe"/>
      {{ last_name }}
      <label for="floatingInput">Last name</label>
    </div>

    <div class="form-floating">
      <input type="email" class="form-control" id="email" placeholder="name@example.com"/>
      {{ email }}
      <label for="floatingInput">Email address</label>
    </div>

    <div class="form-floating">
      <input type="password" class="form-control" id="password" placeholder="Password"/>
      {{ password }}
      <label for="floatingPassword">Password</label>
    </div>

    <button id="login-btn" class="w-100 btn btn-md btn-primary" type="submit">Create account</button>
  </form>
</div>

<script src="/homework/14challenge-assignment/public/js/signup.js"></script>
